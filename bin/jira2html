'use strict';

var mod_jiramark = require('../');
var mod_fs = require('fs');

if (process.argv.length !== 3) {
    console.error('jira2html <file>');
    process.exit(2);
}

var contents = mod_fs.readFileSync(process.argv[2]);
var html = mod_jiramark.markupToHTML(contents);

console.log('%s', html);
